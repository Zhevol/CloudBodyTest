<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/etInputAction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="5"
            android:background="@null"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textCursorDrawable="@drawable/shape_et_cursor"
            android:textSize="28sp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnVerifyCode"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:layout_weight="3"
            android:background="@drawable/selector_multi_function_et_btn"
            android:text="获取验证码"
            android:textColor="@color/selector_multi_function_et_btn_text"
            android:textSize="14sp" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/btnShowHidePwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:src="@mipmap/icon_hide_password" />
    </android.support.v7.widget.LinearLayoutCompat>

    <View
        android:id="@+id/vBottomLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="#80FFFFFF" />
</android.support.v7.widget.LinearLayoutCompat>